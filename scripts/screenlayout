#!/bin/sh
LAPTOP="eDP-1"
LAPTOP_RES="1920x1080"
DESKTOP="HDMI-0"
DESKTOP_RES="2560x1440"
case "$1" in
    clone)
	xrandr --output $LAPTOP --primary --output $DESKTOP --same-as $LAPTOP
        ;;
    desktop)
	xrandr --output $DESKTOP --primary --mode $DESKTOP_RES --pos 0x0 --rotate normal --output $LAPTOP --off --output DP2 --off
        ;;
    dual)
	xrandr --output $DESKTOP --primary --mode $DESKTOP_RES --pos 0x0 --rotate normal --output $LAPTOP --mode $LAPTOP_RES --pos ${DESKTOP_RES:0:4}x0 --rotate normal 
        ;;
    laptop)
	xrandr --output $LAPTOP --primary --mode $LAPTOP_RES --pos 0x0 --rotate normal --output $DESKTOP --off 
	;;
    *)
        echo "== ! screenlayout : missing or invalid argument ! =="
        echo "Try again with: clone | desktop | dual | laptop"
        exit 2
esac

nitrogen --restore

exit 0
